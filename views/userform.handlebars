<div class="container">
    <h1>Cadastro de Produtos</h1>
    <form action="/users/save" method="post">
    



    <div class="row">
        <div class="col-4">
  <label for="nome_produto">Nome do Produto:</label>
  <input type="text" id="nome_produto" name="nome_produto" class="form-control"><br>
  </div>
  </div> 

    <div class="row">
        <div class="col-4">
  <label for="nome_fornecedor">Nome do Fornecedor:</label>
  <input type="text" id="nome_fornecedor" name="nome_fornecedor" class="form-control"><br>
  </div>
  </div>

    <div class="row">
        <div class="col-4">
  <label for="data_compra">Data da Compra:</label>
  <input type="date" id="data_compra" name="data_compra" class="form-control"><br>
  </div>
  </div>

    <div class="row">
        <div class="col-4">
  <label for="valor_compra">Valor de Compra:</label>
  <input type="number" id="valor_compra" name="valor_compra" step="0.01" class="form-control"><br>
  </div>
  </div>

    <div class="row">
        <div class="col-4">
  <label for="valor_venda">Valor de Venda:</label>
  <input type="number" id="valor_venda" name="valor_venda" step="0.01" class="form-control"><br>
  </div>
  </div>

    <div class="row">
        <div class="col-4">
  <label for="categoria">Categoria:</label>
  <select id="categoria" name="categoria" class="form-control">
    <option value="">Selecione a categoria</option>
    <option value="eletrônicos">Eletrônicos</option>
    <option value="vestuário">Vestuário</option>
    <option value="alimentos">Alimentos</option>
    
  </select><br>
  </div>
  </div>

    <div class="row">
        <div class="col-4">
  <button type="submit" class="btn btn-primary">Confirmar</button>
  </div>
  </div>

    </form>
</div>